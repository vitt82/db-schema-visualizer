{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "label": "dbml: dev",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": {
          "regexp": "^(.*\\.\\w+):(\\d+):(\\d+): (ERROR|WARNING): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*extension build start.*$",
          "endsPattern": "^.*extension (build|rebuild) success.*$"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/packages/dbml-vs-code-extension"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/packages/dbml-vs-code-extension"
      }
    },

    // prisma
    {
      "type": "npm",
      "script": "build:prisma",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/packages/prisma-vs-code-extension"
      }
    },
    {
      "type": "npm",
      "script": "dev",
      "label": "prisma: dev",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${cwd}"],
        "pattern": {
          "regexp": "^(.*\\.\\w+):(\\d+):(\\d+): (ERROR|WARNING): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*extension build start.*$",
          "endsPattern": "^.*extension (build|rebuild) success.*$"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}/packages/prisma-vs-code-extension"
      }
    }
  ]
}
